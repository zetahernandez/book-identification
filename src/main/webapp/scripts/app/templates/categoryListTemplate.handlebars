<div class="filter-type">
	<h2>Category Filter</h2>
		{{#if controller.selectedCategory}}
			<li><a href="#" {{action viewAllCategories target="controller"}} id="allCategories">All Categories</a></li>
			{{#each categoryParent in controller.selectedCategories}}
				<li><a href="#" {{action selectCategory categoryParent target="controller"}}>{{categoryParent.categoryName}}</a></li>
			{{/each}}
		{{/if}}
		{{#if controller.content}}
			{{#each category in controller}}
				<li><a href="#" {{action selectCategory category target="controller"}}>{{category.categoryName}}</a></li>
			{{/each}}
		{{/if}}
</div>


